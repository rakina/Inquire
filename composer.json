{
	"name": "rakina/sscele",
	"description": "A q&a forum for course-related stuff",
	"keywords": ["forum", "scele"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "4.2.*",
        "mews/purifier": "dev-master",
        "devhook/ckeditor": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
